@model CESI_CSharp_TPChocolatine.Models.ExpressionViewModel

@{
    ViewData["Title"] = "Expressions > Supprimer une expression";
}

<h1>Expressions</h1>

<h3>Êtes-vous sûr(e) de vouloir supprimer cette expression ?</h3>
<div>
    <h4>Expression</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Expression nationale
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Original)
        </dd>
        <dt class="col-sm-2">
            Expression régionale
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Regional)
        </dd>
        <dt class="col-sm-2">
            Région d'application
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Region.Name)
        </dd>
        <dt class="col-sm-2">
            Ajoutée par
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.FirstName) @Html.DisplayFor(model => model.User.LastName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Retour à la liste</a>
    </form>
</div>
